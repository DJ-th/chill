<div class="">

<h1>予約フォーム</h1>
 <%= form_with(model: @store_reservation, local: true) do |f| %>
<div class="form-group">
　 <div class='form-text-wrap'>
     <label class="form-text">名前</label>
       <span class="indispensable">必須</span>
 　</div>
      <%= f.text_field :name%>
  </div>
      <div class="form-group">
        <div class='form-text-wrap'>
          <label class="form-text">メールアドレス</label>
          <span class="indispensable">必須</span>
        </div>
         <%= f.text_field :email, class:"input-default", id:"email", placeholder:"例）aaaa@gmail.com" %> 
      </div>
     <div class="form-group">
        <div class='form-text-wrap'>
          <label class="form-text">電話番号</label>
          <span class="indispensable">必須</span>
        </div>
        <%= f.text_field :phone_number, class:"input-default", id:"phone-number", placeholder:"例）08011112222", maxlength:"11" %> 
        </div>
        <div class="form-group">
        <div class='form-text-wrap'>
          <label class="form-text">予約時間</label>
          <span class="indispensable">必須</span>
        </div>
          <%= f.collection_select(:prefecture_id, Prefecture.all, :id, :name, {}, {class:"select-box", id:"prefecture"}) %>  
      </div>
      </div>


        <div class="store_reservation-bottan">
      <%= f.submit "予約確認画面"  %>
      <%=link_to 'もどる', root_path %>
    </div>
    <%end%>
    
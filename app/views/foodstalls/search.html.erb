<% if owner_signed_in?%>
  <%= render "owners/shared/header" %>
  <%else%>
  <%= render "users/shared/header" %>
  <%end%>

<h1>
  検索結果
</h1>
<%# 検索結果の個数で条件分岐 %>
<% if @results.length !=0 %>
  <% @results.each do |result| %>
    <br>
    <li class="list">
      <h2 class="list-title">
      <%= link_to foodstall_path(result.id) do %>
      <%= result.shop_name%>
      <p class="list-category"><%= result.category.name %></p>
      <% end %>
      <%= link_to foodstall_path(result.id) do %>
      <% result.images.each do |image| %>
      <%= image_tag image, class:'images' %>
      <% end %>
      <% end %>
      </h2>
      <div class="list-text">
      <h4><%= result.prefecture.name %></h4>
      <p><%= result.city_name %><%= result.address%><%= result.building_name%></p>
      </div>
    </li>
  <% end %>
<% else %>
  該当する商品はありません
<% end %>



